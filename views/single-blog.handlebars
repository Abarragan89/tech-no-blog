
{{> blog-post blog}}

{{!-- Comments --}}
{{#each comments as |comment|}}
<div class="container p-6">
    <div class="card">
        <header class="card-header has-background-dark p-4">
            <div class="container">
                <div class="level">
                    <div class="level-left">
                        <div class="level-item">
                            <h3 class="is-size-4 has-text-light">Comment by {{blog.blogId}} </h3>
                        </div>
                    </div>
                    <div class="level-right">
                        <div class="level-item">
                            <h5 class="has-text-light">on {{comment.user.username}}</h5>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="card-content">
            <div class="content">
                {{comment.comment_text}}
            </div>
        </div>
    </div>
</div>
{{/each}}
